$black: #000000;
$olive: #365217;
$lime: #C6BA80;
$white: #FFFFFF;

$olive-hover: transparentize($olive, 0.2);
$lime-border: transparentize($lime, 0.4);
$gray: #222222;

@mixin transition($args...) {
  -webkit-transition: $args;
  -moz-transition: $args;
  -ms-transition: $args;
  -o-transition: $args;
  transition: $args;
}

html {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

body {
  background-color: #fff;
  color: #191919;
  font-family: 'Open Sans', sans-serif;
  font-size: 12px;
  line-height: 2em;
  margin: 0px;
}

h1 {
  font-family: 'Roboto Slab', serif;
  font-weight: 400;
  font-size: 3em;
  text-transform: uppercase;
  color: $olive;
}

a {
  text-decoration: none;
  font-weight: 700;
  border-bottom: 0px;
  color: $olive;
  border-bottom: 1px dotted $white;

  &:hover {
    color: $olive-hover;
    border-bottom-color: $olive-hover;
  }
}

a, .Button {
  @include transition(all 0.3s ease);
}

.Header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: url(<%= asset_path 'bg_header.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center 40%;
  padding: 2em;
}

.Header-logo {
  width: 275px;
}

.Header-title {
  background-image: url(<%= asset_path 'WishMachine_Logo.png' %>);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -10000px;
  height: 320px;
  width: 500px;
  position: relative;
  margin-bottom: 3em;
}

#Header-cta {
  position: fixed;
  top: 0;
  left: 0;
  background-color: $olive-hover;
  color: $white;
  font-size: 1.5em;
  padding: 0.75em 1.5em;
  border: 0px;
  text-transform: uppercase;
  opacity: 1;
}

#Header-cta:hover {
  color: $white;
  background-color: $olive;
  padding: 0.8em 1.55em;
}

.Container {
  margin: 0em 6em;
  display: flex;
  flex-direction: column;

  h1 {
    text-align: center;
    margin: 1em;
    color: $gray;
  }
}

.Copyright {
  color: transparentize($white, 0.3);
  padding: 3em 0em 0em;
}


@media all and (max-width: 768px) and (min-width: 481px) {
  .Container { margin: 0em 4em; }
  .Header-title { max-height: 200px; max-width: 350px; margin-bottom: 1em;}
}

@media all and (max-width: 480px) {
  .Container { margin: 0em 2em; }
  .Header-title { max-height: 160px; max-width: 280px; margin-bottom: 0em;}
}