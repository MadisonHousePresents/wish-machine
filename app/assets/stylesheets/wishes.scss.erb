$black: #000000;
$white: #FFFFFF;
$marigold: #CDB619;
$brass: #AD9218;
$rust: #756417;
$antique: #594C11;
$gold-dust: #C6BA80;
$olive: #3D5532;

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}

.WishGallery-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 3em 6em 3em;
  margin: 0px;

  h1 {
		color: $white;
		margin: 0.4em 0em 1em
  }
}

.WishGallery-title {
  background-image: url(<%= asset_path 'wish-gallery-title.png' %>);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -10000px;
  height: 196px;
  width: 464px;
  position: relative;
  margin-bottom: 3em;

}

.WishGallery-accent {
	margin-top: 1em;
	max-width: 120px;
}

.WishGallery {
  width: 100%;
}

.WishGallery-container, .WishGallery-tempContainer {
	color: #484848;
	padding: 0px;
	width: 100%;
  display: flex;

  strong {
    color: $olive;
  }
}

.WishGallery-tempContainer {
  justify-content: center;
}

.WishGallery-column, .WishGallery-wish {
  width: 32%;
}

.WishGallery-column--half, .WishGallery-grantedWish {
  width: 48%;
}

.WishGallery-gutter {
  width: 2%;
} 

.WishGallery-wish, .WishGallery-grantedWish {
  background-image: url(<%= asset_path 'wish-flourish.png' %>);
  background-repeat: no-repeat;
  background-size: auto;
  background-position: 50% 1em;

  @include border-radius(3px);
  padding: 3.2em 1.5em 1em;
  margin-bottom: 2%;
  border: 1px solid $gold-dust;
  box-sizing: border-box;
  font-size: 1.2em;
  display: table;
  text-align: center;
/*  word-break: break-all;
  word-break: break-word;
  hyphens: auto;*/
}

.WishGallery-wish:after {
  content: url(<%= asset_path 'wish-accent-border.png' %>);
}

.WishGallery-grantedWish {
  padding: 1.75em;
}

.WishGallery-winner {
  font-size: 1.5em;
  font-weight: 700;
}

.WishGallery-winnerName {
  padding: 0em 0.5em;
}

.WishGallery-description {
  text-align: left;
  font-size: 1.2em;
}

.WishGallery-information {
  text-align: left;
  line-height: 1.4em;
}

.WishGallery-pagination {
  visibility: hidden;
}

.WishGallery-externalLink {
  margin-bottom: 0em;
}

.WishGallery-externalLink a {
  color: $marigold;
  font-size: 1.5em;
  font-weight: 700;
  border-bottom: 0;
}

.WishGallery-externalLink a:hover {
  color: $rust;
}

.WishGallery-externalLink a:after {
  content:"\00a0 \203A";
}

@media all and (max-width: 940px) and (min-width: 769px) {
  .WishGallery-column, .WishGallery-wish { width: 31%; }
  .WishGallery-gutter { width: 3.5%; } 
  .WishGallery-wish { margin-bottom: 3.5%; }
}

@media all and (max-width: 768px) and (min-width: 481px) {
  .WishGallery-wrapper { padding: 2em 4em; } 
  .WishGallery-column, .WishGallery-wish { width: 47%; }
  .WishGallery-column--half, .WishGallery-grantedWish { width: 100%; }
  .WishGallery-gutter { width: 3%; } 
  .WishGallery-wish { margin-bottom: 3%; }
}

@media all and (max-width: 480px) {
  .WishGallery-wrapper { padding: 2em; } 
  .WishGallery-column, .WishGallery-wish, .WishGallery-column--half, .WishGallery-grantedWish { width: 100%; }
  .WishGallery-gutter { width: 0; } 
  .WishGallery-wish { margin-bottom: 8%; }
}