$black: #000000;
$white: #FFFFFF;
$marigold: #CDB619;
$brass: #AD9218;
$gold-dust: #C6BA80;
$olive: #365217;
$olive-hover: transparentize($olive, 0.2);

html {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

body {
  background-color: $white;
  color: #484848;
  font-family: 'Open Sans', sans-serif;
  font-size: 12px;
  line-height: 2em;
  margin: 0px;
}

h2.Header-title {
  font-family: 'Eczar', serif;
  font-weight: 500;
  font-size: 3em;
  color: $white;
  line-height: 1.1em;
  padding-left: 1em;

  span.em {
    font-weight: 700;
  }

  span.basic {
    font-size: 1.5em;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 400;
    text-transform: uppercase;
  }
}

.Header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: url(<%= asset_path 'forest_background.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 30% center;
  padding: 8em 8em 16em;
}

#Header-linkBack {
  position: fixed;
  top: 0;
  right: 0;
  background-color: $olive-hover;
  color: $white;
  font-size: 1.5em;
  padding: 0.75em 1.5em;
  border: 0px;
  text-transform: uppercase;
  opacity: 1;
  font-family: 'Roboto Condensed', sans-serif;
  font-weight: 400;
}

#Header-linkBack:hover {
  color: $white;
  background-color: $olive;
  padding: 0.8em 1.55em;
}

.Header-lead {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.Header-sublead {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 2em;

  h3 {
    color: $marigold;
    font-size: 2.2em;
    font-weight: 200;
    margin: 0em;
    line-height: 2em;
  }

  h3:first-child {
    line-height: 1em;

    em {
      font-weight: 400;
      font-style: italic;
    }

    strong {
      font-weight: 700;
    }
  }

  h3:last-child {
    font-weight: 400;
    font-style: italic;
  }
}

.Header-logo {
  background-image: url(<%= asset_path 'EF_WM_icon_white.png' %>);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -10000px;
  height: 194px;
  width: 220px;
  position: relative;
  margin-bottom: 3em;
}

.Container {
  margin: 0em 6em;
  display: flex;
  flex-direction: column;
}

.Copyright {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: transparentize($black, 0.3);
  padding: 3em 0em 0em;
}