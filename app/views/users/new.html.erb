<h1>Make A Wish</h1>

<%= render 'form', user: @user %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>String</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.terms_accepted %></td>
      </tr>
    <% end %>
  </tbody>
</table>